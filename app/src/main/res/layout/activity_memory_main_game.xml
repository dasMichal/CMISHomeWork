<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
                name="viewmodel"
                type="com.example.cmis435ex01.viewmodel.MainViewModel" />
    </data>




<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">


    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="437dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/MemoryCardHolder"
            android:foregroundGravity="center"
            android:textAlignment="center"
            app:flow_horizontalAlign="center"
            app:flow_verticalAlign="center"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:layoutAnimation="@anim/layout_animation"
            android:animationCache="true"
            android:animateLayoutChanges="false">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="100dp"
            android:minWidth="50dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/MemoryCardHolder"
            app:contentPadding="10dp"
            app:layout_constraintVertical_bias="0.755"
            android:elevation="2dp"
            android:layout_marginTop="20dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView


                    android:text="@{viewmodel.totalFlipsLiveData}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalFlips"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:layout_gravity="center" />
            <!-- android:text="@{viewmodel.totalFlipsLive}" -->

            <TextView
                    android:text="@{viewmodel.totalWrongFlipsLiveData}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wrongtotalFlips"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:layout_gravity="center" />
            <!-- android:text="@{viewmodel.totalWrongFlipsLive}" -->
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_baseline_refresh_24"
            android:id="@+id/fabRestart"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MemoryCardHolder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.905"
            app:layout_constraintVertical_bias="0.956"
            android:textAlignment="center"
            android:scaleType="center"
            app:fabCustomSize="80dp"
            android:tooltipText="@string/restartgamedialog"
            android:contentDescription="@string/restarts_the_memory_game" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>